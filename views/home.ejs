<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Replace Tailwind CSS with CDN or local setup -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Bootstrap and Font Awesome links remain for specific styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Additional custom styles can be added here */
        .card {
            width: 320px; /* Adjust as needed */
            height: auto; /* Ensure height adjusts based on content */
        }
    </style>
</head>

<body class="bg-gray-100">

    <!-- Navigation Bar -->
    <nav class="bg-white shadow-md">
        <div class="max-w-screen-xl mx-auto p-4 flex justify-between items-center">
            <a href="https://flowbite.com/" class="flex items-center space-x-3">
                <img src="data:image/png;base64," class="h-8" alt="Flowbite Logo">
                <span class="text-3xl text-red-700 font-bold tracking-wider">Safar</span>
            </a>
            <div class="flex space-x-3">
                <a href="http://localhost:4000/"
                    class="px-4 py-2 text-sm font-medium text-white bg-green-400 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-green-500 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    ChatRoom ðŸ’¬</a>
                <a href="/logout"
                    class="px-4 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-purple-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Logout</a>
                <button type="button"
                    class="p-2 w-10 h-10 flex items-center justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                    aria-controls="navbar-sticky" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </nav>

    <!-- Create Post Button -->
    <a href="/createpost"
        class="inline-flex items-center mt-10 ml-10 px-10 py-3.5 text-base font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        <i class="fa-solid fa-plus fa-shake mr-3"></i>
        Create new Post
    </a>

    <!-- Welcome Message -->
    <h1 class="m-10 text-3xl">Welcome, <span class="text-blue-700 font-bold"><%= user.username %></span> ðŸ‘‹</h1>

    <!-- Horizontal Line -->
    <hr class="m-10">

    <!-- Posts Section -->
    <div class="flex flex-wrap m-10 space-x-6">
        <% posts.forEach(post => { %>
        <div class="card">
            <img src="../images/uploads/<%= post.file %>" class="card-img-top" alt="Post Image">
            <div class="card-body">
                <h3 class="card-title text-2xl font-bold mb-2"><%= post.title %></h3>
                <p class="card-text text-lg"><%= post.description %></p>
            </div>
            <div class="card-footer flex justify-evenly items-center p-4">
                <a href="/view/<%= post._id %>"
                    class="px-3 py-2 text-sm bg-purple-600 rounded-lg text-white font-bold hover:bg-purple-700">View
                    More</a>
                    <form action="/report/<%= post._id %>" method="get">
                        <button type="submit"
                            class="px-4 py-2 text-sm bg-yellow-400 rounded-lg text-white font-bold hover:bg-yellow-700">Report</button>
                    </form>
              
            </div>
           <div class="flex items-center justify-center mb-2">
          
           </div>

        </div>
        <% }); %>
    </div>

    <script>
        window.embeddedChatbotConfig = {
        chatbotId: "JAZsMEEiJ3Qf94G1rAsjg",
        domain: "www.chatbase.co"
        }
        </script>
        <script
        src="https://www.chatbase.co/embed.min.js"
        chatbotId="JAZsMEEiJ3Qf94G1rAsjg"
        domain="www.chatbase.co"
        defer>
        </script>

</body>

</html>
